# MongoDB Atlas Admin API Credentials
# Create an API key at: Atlas → Organization Access → API Keys → Create
# Permissions required: Project Owner
ATLAS_PUBLIC_KEY=your_public_key
ATLAS_PRIVATE_KEY=your_private_key

# Atlas Project and Cluster
# Find Project ID: Atlas → Project Settings → Project ID
# Cluster name is case-sensitive
ATLAS_PROJECT_ID=your_project_id
ATLAS_CLUSTER_NAME=YourCluster

# MongoDB Connection String
# Get from: Atlas → Connect → Drivers
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/failover-test

# Server Configuration
PORT=3001

# Test Settings
TEST_DURATION_SECONDS=360
OPERATION_INTERVAL_MS=150
